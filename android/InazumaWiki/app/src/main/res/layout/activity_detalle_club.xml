<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afundacion.inazumawiki.detalleClub.DetalleClubActivity">


    <TextView
        android:id="@+id/CabezeraDetalleClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informaci칩n del club"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreClubDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/CabezeraDetalleClub"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imagenClubDetalle"
        android:layout_width="340dp"
        android:layout_height="275dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreClubDetalle" />

    <TextView
        android:id="@+id/descripcionClubDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:justificationMode="inter_word"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenClubDetalle" />

    <TextView
        android:id="@+id/textoFormacion"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text="Formaci칩n/es: "
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/formacionClubDetalle"
        app:layout_constraintHorizontal_bias="0.353"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionClubDetalle" />

    <TextView
        android:id="@+id/formacionClubDetalle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="76dp"
        android:justificationMode="inter_word"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionClubDetalle" />

    <TextView
        android:id="@+id/miembrosClubDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:justificationMode="inter_word"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/formacionClubDetalle" />

    <!--Button
        android:id="@+id/botonA침adirFavoritosClubDetalle"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="A침adir a favoritos"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miembrosClubDetalle"
        app:layout_constraintVertical_bias="0.0" /-->

    <Button
        android:id="@+id/botonVolverMenuClubDetalle"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miembrosClubDetalle"
        app:layout_constraintVertical_bias="0.172" />


</androidx.constraintlayout.widget.ConstraintLayout>