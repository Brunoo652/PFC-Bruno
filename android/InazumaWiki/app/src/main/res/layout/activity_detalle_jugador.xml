<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afundacion.inazumawiki.detalleJugador.DetalleJugadorActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle del jugador"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="aqui va el nombre"
        android:id="@+id/nombreJugadorDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imagenJugadorDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/nombreJugadorDetalle" />


    <TextView
        android:id="@+id/descripcionJugadorDetalle"
        android:text="aqui va la descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imagenJugadorDetalle"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/sexoJugadorDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:text="aqui va el sexo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionJugadorDetalle" />

    <TextView
        android:id="@+id/afinidadJugadorDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="28dp"
        android:text="aqui va la afinidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/posicionJugadorDetalle"
        app:layout_constraintTop_toBottomOf="@+id/descripcionJugadorDetalle" />

    <TextView
        android:id="@+id/posicionJugadorDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="136dp"
        android:text="aqui va la posicion"
        app:layout_constraintStart_toEndOf="@+id/sexoJugadorDetalle"
        app:layout_constraintTop_toBottomOf="@+id/descripcionJugadorDetalle" />

    <ToggleButton
        android:id="@+id/botonFavoritosDetalleJugador"
        android:layout_width="155dp"
        android:layout_height="117dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/btn_toogle_selector"
        android:textOff="Añadir a favoritos"
        android:textOn="Ya añadido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonVolverDetalleJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="152dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toEndOf="@+id/botonFavoritosDetalleJugador" />


</androidx.constraintlayout.widget.ConstraintLayout>